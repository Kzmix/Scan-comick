---
import { timeAgo } from "@/lib/time";
const { items = [] } = Astro.props;

---

<section class="mt-10">
  <h2 class="px-4 text-lg font-semibold">
    Latest Updates
  </h2>

  <div
    class="mt-4 grid grid-cols-2 gap-4 px-4"
  >
    {items.map((comic) => (
      <a
        href={`/series/${comic.slug}`}
        class="group"
      >
        <!-- COVER -->
        <img
          src={comic.cover}
          alt={comic.title}
          loading="lazy"
          class="aspect-[3/4] w-full rounded-lg
                 object-cover"
        />

        <!-- META -->
        <div class="mt-2">
          <h3
            class="line-clamp-2 text-sm font-medium
                   leading-snug"
          >
            {comic.title}
          </h3>

          <p class="mt-1 text-xs text-zinc-400">
            Chapter {comic.lastChapter}
          </p>

          <p class="text-xs text-zinc-500">
            Update {timeAgo(comic.updatedAt)}
          </p>
        </div>
      </a>
    ))}
  </div>
</section>